{
  "name": "@gumbee/agent",
  "version": "1.3.0",
  "description": "Agent framework with rich widget and middleware support",
  "author": "Gumbee <mugeeb.hassan@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/gumbee/agent#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gumbee/agent.git"
  },
  "bugs": {
    "url": "https://github.com/gumbee/agent/issues"
  },
  "keywords": [
    "gumbee",
    "agent",
    "ai-sdk",
    "structured",
    "streaming"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./graph": {
      "import": {
        "types": "./dist/graph.d.ts",
        "default": "./dist/graph.js"
      },
      "require": {
        "types": "./dist/graph.d.cts",
        "default": "./dist/graph.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "prepublishOnly": "bun run build",
    "changeset": "changeset",
    "version": "changeset version"
  },
  "dependencies": {
    "@gumbee/structured": "^1.0.0",
    "@gumbee/prompt": "^1.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.3.4",
    "bunup": "^0.16.10",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^15.15.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "ai": "^6.0.49"
  },
  "peerDependencies": {
    "ai": ">=5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
